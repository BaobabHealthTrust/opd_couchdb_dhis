<div class=bs-example data-example-id=panel-with-heading >
                     <div class="panel panel-default" style="border-radius: 0px; border:0px" >
                        <div class=panel-heading>

                            <h3>
                                  <%= @report_type.upcase %> REPORTS FOR <strong style="color: brown"> <%=  @district %> </strong>DISTRICT
                            </h3>

                        </div>
                        <div class=panel-body style="padding: 1%">
                            <div class='col-lg-7'>


                                <form action="/report/generate_facility_report" method="POST">
                                    <input type="hidden" name="report_type" value="<%= @report_type %>">
                                  <div class="form-group red">
                                    <label for="exampleSelect1">Health Facility Name</label>
                                    <select class="form-control" id="exampleSelect1" required="true" name ="facility_details[site_name]">

                                   <% @facilities.each do |site|
                                    %>
                                        <option><%= site.downcase %></option>
                                        
                                    <%end%>
                                  </select>
                              </div>


                              <div class="form-group red" style="width: 20%" >
                                <label for="exampleSelect1"> Report Month</label>
                                <select class="form-control" id="month" required="true" name = "facility_details[month]">
                                      <option></option>
                                      <option value="01">January</option>
                                      <option value="02">February</option>
                                      <option value="03">March</option>
                                      <option value="04">April</option>
                                      <option value="05">May</option>
                                      <option value="06">June</option>
                                      <option value="07">July</option>
                                      <option value="08">August</option>
                                      <option value="09">September</option>
                                      <option value="10">October</option>
                                      <option value="11">November</option>
                                      <option value="12">December</option>

                                  
                              </select>
                          </div>


                          <div class="form-group red" style="width: 20%">
                            <label for="exampleInputPassword1">Report Year</label>
                            <input type="number" name = "facility_details[year]" class="form-control" id="year" placeholder="2005 - above" min="2005" max="<%= Date.today.year %>" required="true">
                        </div>

                        
                        <button type="submit" class="btn btn-success red">Generate</button>
                    </form>
                </div>

                <div class='col-md-5'>

                </div>




            </div>
        </div>
    </div>




</div>
