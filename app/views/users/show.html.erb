<style>
    img {
        margin-right: 8px;
    }
    #user_table{
        border-collapse: collapse;
    }
    #user_table tr:nth-child(even) {
        background: #f8fbfd;
    }
    #user_table th{
        color: #ffffff;
        background: #1d5288;
        padding: 0.5em;
        padding-left: 2%;
        font-size: 1em !important;
        border: 1px solid #344351;
    }
    #user_table td{
        border: 1px solid #344351;
        color:#1a2732;
        padding-left: 2%;
    }
    .btn-danger{
    background-color:  #b41b1b;
    border: 1px solid #b11a1a;
  }

  
  #myModal
        {
            position : absolute;
              left: 20%;
              top: 25%;
              display: none;
        }    

  #unblockModal
        {
            position : absolute;
              left: 20%;
              top: 25%;
              display: none;
        }    


</style>

<table width="100%" id="user_table">
	 <thead>
	   <tr>
	     <th>Username</th>
	     <th>Name</th>
	     <th>Last Name</th>
	     <th>E-mail</th>
	     <th >Action</th>
	   </tr>
	  </thead> 
   <tbody>
 
	  <% User.all.each do |user| %>
		<tr>
	      <td><%= user.username %></td>
		  <td><%= user.name %></td>
		  <td></td>
		  <td></td>
		  <td></td>
		  	  
		</tr>
	  <% end %>
	</tbody>  
</table>